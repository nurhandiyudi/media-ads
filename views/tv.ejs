    <title>Media Advertise - Login</title>
    <!-- Structure content implementation -->
    <style type="text/css">
      .login-container {
        background: linear-gradient(to top, #e1e1e1, #f8fcff);
        height:100vh;
        padding:80px 15px;
      }
      .login-card {
        margin:0 auto;
        max-width:400px;
        padding:40px 50px 70px 50px;
        text-align:center;
      }
      .login-card img {
        height:80px;
        margin:0 0 40px 0;
      }
      .login-card form input {
        margin-bottom:10px;
        padding-bottom:9px;
      }
      .login-card ::placeholder {
        color: #aaa;
        font-size:14px;
        opacity: 1;
      }
      .login-card :-ms-input-placeholder {
        color: #999;
      }
      .login-card ::-ms-input-placeholder {
        color: #999;
      }
      .login-footer {
        text-align: center;
        margin: 50px 0;
        font-size: 14px;
        color: #999;
      }
      .navbar-container {
        background: linear-gradient(-90deg, #777, #575454);
      }
      .admin-navbar {
        max-width:800px;
        margin:0 auto;
      }
      .add-card {
        margin-top: 30px;
        margin-bottom: 50px;
      }
    </style>
