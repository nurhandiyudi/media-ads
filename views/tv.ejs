                  <a class="nav-link" href="https://media-ads-nodejs-nurhandiyudi.c9users.io/admin/ads">Ad <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item active">
                  <a class="nav-link" href="https://media-ads-nodejs-nurhandiyudi.c9users.io/admin/tv">Tv <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item active">
                  <a class="nav-link" href="https://media-ads-nodejs-nurhandiyudi.c9users.io/admin/impr">Impression <span class="sr-only">(current)</span></a>
                </li>
            </div>
            <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
              <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                      
              </ul>
              <form class="form-inline my-2 my-lg-0"> 
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Logout</button>
              </form>
          </div>
      </nav>
      
      
      
    </div>
    <div style="max-width:800px;margin:0 auto;margin-top:50px;">
      <ul class="nav nav-tabs" id="myTab" role="tablist">
        <!--
        <li class="nav-item">
          <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Dashboard</a>
        </li>
        -->
        <li class="nav-item">
          <a class="nav-link" id="profile-tab" data-toggle="tab" href="#TvList" role="tab" aria-controls="profile" aria-selected="false">Tv List</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" id="contact-tab" data-toggle="tab" href="#CreateTv" role="tab" aria-controls="contact" aria-selected="false">Create Tv</a>
        </li>
      </ul>
      <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade add-card" id="TvList" role="tabpanel" aria-labelledby="profile-tab">
          <table class="table">
            <thead>
              <tr>
                <th scope="col">Id</th>
                <th scope="col">Place</th>
                <th scope="col">Layout</th>
                <th scope="col">Status</th>
              </tr>
            </thead>
            <tbody>
              <% tvs.forEach(function(tvs){ %>
              <tr>
                <th scope="row"><%= tvs.tvId %></th>
                <td><%= tvs.city %> - <%= tvs.place %></td>
                <td><%= tvs.layout %></td>
                <td><%= tvs.status %></td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
        <div class="tab-pane fade add-card" id="CreateTv" role="tabpanel" aria-labelledby="contact-tab">
          <div class="container">
            <form method="post" action="/tv/add">
              <div class="form-group">
                <label for="cityOption">City</label>
                <select class="custom-select" id="cityOption" name="cityOption">
                   <option value="Jakarta">Jakarta</option>
                   <option value="Bandung">Bandung</option>
                   <option value="Pekanbaru">Pekanbaru</option>
                </select>
              </div>
              <div class="form-group">
                <label for="exampleInputEmail1">Location</label>
                <input type="text" id="placeOption" name="placeOption" class="form-control" placeholder="Location">
              </div>
              <div class="form-group">
                <label for="exampleInputEmail1">Layout</label>
                <select class="custom-select" id="layoutOption" name="layoutOption">
                  <option value="Layout2">Layout1</option>
                  <option value="Layout2">Layout2</option>
                </select>
              </div>
              <div class="form-group">
                <label for="exampleInputEmail1">Status</label>
                <select class="custom-select" id="statusOption" name="statusOption">
                  <option value="1">Active</option>
                  <option value="0">Un Active</option>
                </select>
              </div>
               <input class="btn btn-lg btn-outline-secondary" type="submit" value="SUBMIT"/>
            </form>
          </div>
        </div>
      </div>
    </div>
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
